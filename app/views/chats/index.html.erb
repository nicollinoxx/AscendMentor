<% content_for :title, "Chats" %>

<div class="w-full">
  <% if notice.present? || alert.present? %>
    <p class="py-2 px-3 mb-5 text-green-500 font-medium rounded-md inline-block <%= 'bg-green-50 dark:bg-white' if notice.present? %> <%= 'bg-red-50 text-red-500' if alert.present? %>" id="notice">
      <%= notice || alert %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl mb-3">Chats</h1>

    <div id="messages" class="min-w-full divide-y divide-gray-200 space-y-5">
        <%= render partial: "chats/chat", collection: @page.records, as: :chat %>
        <%= render "layouts/next_page_container", src: chats_path(page: @page.next_param, format: :turbo_stream) unless @page.last? %>
    </div>
</div>
