<% content_for :title, "Chats" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-3">
    <h1 class="font-bold text-4xl">Chats</h1>
    <%= link_to "New chat", new_chat_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="chats" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% @chats.each do |chat| %>
      <div class="flex justify-between items-center">
        <%= render chat %>
        <div class="flex items-center space-x-4">
          <%= link_to "Show messages", chat_messages_path(chat), class: "rounded-md p-2 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
          <ul>
            <li><%= link_to "Show", chat, class: "text-gray-600 font-medium" %></li>
            <li><%= button_to "Destroy", chat, method: :delete, class: "text-red-600 font-medium ", data: { turbo_confirm: "Are you sure?" } %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
