<% content_for :title, "Editing chat" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing chat</h1>

  <%= render "form", chat: @chat %>

  <div class="mt-2">
    <%= link_to "Show this chat", @chat, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 dark:bg-gray-300 dark:text-black inline-block font-medium" %>
    <%= link_to "Back to chats", chats_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  </div>
</div>
