<div id="<%= dom_id chat %>" class="flex justify-between items-center my-2 py-2">
    <% chat.users.each do |participant| %>
      <% if participant != Current.user %>
        <div class="flex items-center">
          <% if participant.avatar.attached? %>
              <%= link_to image_tag(participant.avatar, class: 'border-3 border-blue-600 object-cover rounded-full min-w-18 max-w-18 h-18'), identity_profile_path(participant.name) %>
          <% else %>
              <div class="bg-gray-600 border-3 border-blue-600 object-cover rounded-full min-w-18 max-w-18 h-18"></div>
          <% end %>

          <p class='ml-2 text-wrap'><%= participant.name %></p>
        </div>
      <% end %>
    <% end %>

    <div class="text-center">
        <%= link_to "Messages", chat_messages_path(chat), class: "text-center rounded-md p-2 bg-gray-600 hover:bg-gray-500 text-white font-medium" %>
        <%= button_to "Destroy", chat, method: :delete, class: "text-red-600 font-medium mt-3", data: { turbo_confirm: "Are you sure?" } %>
    </div>
</div>
