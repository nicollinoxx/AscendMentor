<%= form_with(model: [@chat, message]) do |form| %>
  <div class="bg-red-50 rounded-md my-2">
    <% if message.errors.any? %>
      <div id="error_explanation" class="text-red-600 p-2 font-medium rounded-md">
        <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

        <ul class="list-disc ml-6">
          <% message.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <div class="flex items-center mb-6 container">
    <%= form.text_area :content, rows: 1, class: "scroll pl-4 pr-14 py-3.5 w-full bg-white block shadow-sm rounded-full border border-gray-300 focus:outline-blue-600 dark:bg-slate-600 overflow-auto resize-none", placeholder: "Your message..." %>

    <div class="relative bottom-0 right-12">
      <%= form.button class: "rounded-full px-3.5 py-3.5 bg-blue-600 text-white  font-medium cursor-pointer" do %>
          <svg class="w-3 h-3 rotate-90 rtl:-rotate-90" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
              <path d="m17.914 18.594-8-18a1 1 0 0 0-1.828 0l-8 18a1 1 0 0 0 1.157 1.376L8 18.281V9a1 1 0 0 1 2 0v9.281l6.758 1.689a1 1 0 0 0 1.156-1.376Z"/>
          </svg>
      <% end %>
    </div>
  </div>
<% end %>
