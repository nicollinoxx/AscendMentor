<% content_for :title, "Editing message" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing message</h1>

  <%= render "form", { chat: @chat, message: @message } %>

  <%= link_to "Show this message", chat_message_url(@chat, @message), class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to messages", chat_messages_url(@chat), class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
