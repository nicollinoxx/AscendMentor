<%= turbo_frame_tag "new_message" do %>
  <%= render "form", { message: @message } %>

  <div class="flex space-x-4 mt-2">
    <%= link_to "Cancel", chat_messages_url(@chat), class: "bg-gray-400 text-sm font-semibold py-2 px-4 rounded-lg hover:bg-gray-300" %>

    <%= link_to 'Destroy', chat_message_path(@chat, @message), data: { turbo_method: :delete, turbo_confirm: 'Are you sure ?'}, class: 'bg-red-600 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-red-700' %>
  </div>
<% end %>
