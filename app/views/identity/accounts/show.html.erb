<% content_for :title, "Profile" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 text-sm bg-green-50 my-1 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl mb-4">Profile</h1>
    <%= link_to 'Edit profile', edit_identity_account_path(@user), class: 'rounded-md px-3.5 py-2.5 bg-gray-600 hover:bg-gray-500 text-white block font-medium' %>
  </div>

  <%= render partial: "identity/shared/profile" %>

  <%= link_to 'Sessions', sessions_path, class: 'text-gray-700 underline hover:no-underline' %>
</div>
