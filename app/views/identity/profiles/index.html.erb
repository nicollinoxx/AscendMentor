  </div>

  <div id="profiles" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% @user.each do |user| %>
        <div class="flex justify-between items-center ">
          <div class='my-2'>
            <p class='font-medium mb-3'><%= user.name %></p>
            <p>asdf asdfasdf asdfasd sadf</p>
          </div>
