<% content_for :title, "Profile" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 mb-5 text-sm bg-green-50 dark:bg-white text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if alert.present? %>
      <p class="py-2 px-3 mb-5 text-sm bg-red-50 dark:bg-white text-red-500 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-4">Profile</h1>

  <%= render partial: "identity/shared/profile" %>

  <%= button_to 'Send a message', create_chat_path(guest: @user.name)  %>
</div>
