<% content_for :title, "Sessions" %>

<div class="w-full" data-controller='scroll'>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl mb-3">Sessions</h1>
  </div>

  <div class="divide-y divide-gray-200 space-y-5">
    <% @sessions.each do |session| %>
      <div class="pb-3 flex space-x-2 justify-between items-center">
        <p>
          <strong>IP:</strong> <%= session.ip_address %><br>
          <strong>Device:</strong> <%= session.user_agent %>
        </p>
        <%= button_to 'Destroy', session_path(session), method: :delete, class: 'm-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium' %>
      </div>
    <% end %>
  </div>
</div>
